{
    "rules": {
        ".read": "auth != null",
        ".write": "auth != null",
        "deployments": {
            "history": {
                ".indexOn": ["environment", "startTime", "timestamp"]
            },
            "environments": {
                ".indexOn": ["name", "status"]
            }
        },
        "audit_logs": {
            "deployments": {
                ".indexOn": ["timestamp", "action"]
            }
        }
    }
}
