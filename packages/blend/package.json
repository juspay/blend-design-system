    "type": "module",
    "main": "./dist/main.js",
    "module": "./dist/main.js",
    "types": "./dist/main.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "sideEffects": false,
    "exports": {
        ".": {
